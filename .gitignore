# Ignore everthing in craft...
craft/*

# ...except specified plugins...
!craft/plugins/
craft/plugins/*

# ...translations...
!craft/translations/

# ...the custom admin logo...
!craft/storage/logo/

# ...non-sensitive configuration...
!craft/config/
craft/config/license.key

# ...and your templates...
!/craft/templates/

# ...except templates generated from src.
/craft/templates/_partials/snippets/

# Now ignore everything in public...
public/*

# ...except indexes...
!public/index.php
#!public/en/

# ...and assets...
!public/assets/

# ...but do ignore assets generated from src...
public/assets/css/
public/assets/js/
public/assets/img/
public/assets/fonts/

# ...or uploaded.
public/assets/uploads/

# Ignore dev stuff.
dev/

# Now ignore dependencies...
bower_components/
node_modules/

# ...debris...
.sass-cache/
*.css.map
.DS_Store
npm-debug.log

# ...and local development stuff.
log/
nocommit/
local.nginx.conf
.env.php

# oh, and the readme.
README.md
